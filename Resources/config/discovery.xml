<?xml version="1.0" encoding="UTF-8"?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter id="cmf_resource.discovery.bindings" type="collection"/>
    </parameters>

    <services>

        <service id="cmf_resource.discovery" class="Puli\Discovery\InMemoryDiscovery">
            <argument type="collection">
                <argument type="service" id="cmf_resource.discovery.binding_initializer"/>
            </argument>
        </service>

        <service id="cmf_resource.discovery.binding_initializer"
            class="Puli\Discovery\Binding\Initializer\ResourceBindingInitializer"
            public="false">
            <argument type="service" id="cmf_resource.repository"/>
        </service>

    </services>

</container>
